<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="28dp"
    android:paddingEnd="28dp"
    android:paddingStart="28dp"
    android:paddingTop="16dp"
    android:background="@drawable/border_ads">

    <TextView
        android:id="@+id/title_dialog_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/content_dialog_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_dialog_confirm"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="5dp"
        android:textAlignment="center"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/confirm_button_dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_dialog_confirm"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:background="@drawable/button_shape"
        android:text="@string/confirm_button_text"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/cancel_button_dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_button_dialog"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_shape_white_background"
        android:text="@string/cancel_button_text"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />

</RelativeLayout>